@charset "UTF-8";

@import "vendor/lightbox";

@import "bourbon";

@import "base/grid-settings";
@import "neat";

@import "base/base";

@import "helpers";

body {
  font-family: $base-font-family;
  font-size: 1em;
  font-weight: 400;
  margin: 0;

  background: url(<%= asset_path 'seamless_paper_texture.jpg' %>);
}

canvas#effect_canvas {
  background-color: $base-background-color;
  z-index: -999;
  position: absolute;

  width: 100%;
  height: 1000px;

  background: url(<%= asset_path 'seamless_paper_texture.jpg' %>);
  top: 0;
  left: 0;

  padding: 0;
  margin: 0;
}

header {
  @include clearfix;
}

header .uppermost_row {
  @include outer-container;
  @include clearfix;

  .logo {
    @include span-columns(12);
    text-align: center;
    margin-top: 35px;

    a, a:visited {
      color: #5a5a5a;
      color: lighten($color-theme-secondary, 10%);
      font-size: 2em;
      border-bottom: none;
      font-weight: 400;

      &:hover {
        background-color: transparent;
      }
    }
  }

  nav {
    @include span-columns(6);
  }

  .links {
    @include span-columns(3);
    text-align: right;
  }

}

header #centerpiece  {
  @include outer-container;

  padding-top: 190px;

  margin: 0 auto;
  text-align: center;

  min-height: 600px;

  .slogan_header {
    @include span-columns(12);
    margin-bottom: 16px;

    font-size: 2em;
    font-weight: 300;
    color: black;
  }
  .subslogan {
    @include span-columns(12);
    margin-bottom: 24px;
    color: black;
  }
  .buttons {
    @include span-columns(12);
    input {
      font-weight: 400;
    }
  }

}

section#features_row_1 {
  margin-top: 0;
  border-top: white 1px solid;
  border-bottom: white 1px solid;

  width: 100%;
  background:
    radial-gradient(
      lighten($color-theme-secondary, 6%),
      $color-theme-secondary);

  div.wrapper {
    @include outer-container;
    margin-top: 0px;

    width: 100%;

    padding: 40px;

    color: white;

    .content {

      @include media($mobile) {
        @include span-columns(4);
      }

      @include media($mobile-up) {
        @include span-columns(8);
        @include shift(2);
      }
      text-align: center;

      .text {
        min-height: 100px;
        font-weight: 400;
      }
    }
  }
}

main {
  z-index: 0;
  background: url(<%= asset_path 'seamless_paper_texture.jpg' %>);
}

section.header_text {
  margin-top: 30px;
  margin-bottom: 25px;

  div.wrapper {
    @include outer-container;
    position: relative;

    h2 {
      @include span-columns(12);
      text-align: center;
      color: $color-theme-secondary;
      font-weight: 300;
      font-size: 2em;

      padding-bottom: 20px;

      position: relative;
    }

    h2:after {
      background-color: darken(tan, 1%);
      content: "";
      position: absolute;
      top: 100%;
      height: 1px;
      width: 400px;
      margin-left: -200px;

      left: 50%;
    }

  }
}

.portfolio_entry {
  min-height: 200px;

  .wrapper {
    @include outer-container;

    min-height: 200px;
    max-height: $project-entry-max-height;

    .description {
      h3 {
        font-weight: 600;
        font-size: 1.5em;
        color: $color-theme-secondary;
      }

      p {
        font-weight: 400;
      }

      p.blurb {
        orphans: 3;
        widows: 3;
        white-space: normal;
      }

    }

    .display {
      @extend .hover_highlight;

      max-height: $project-entry-max-height;
      overflow: hidden;

      video {
        width: 100%;
        height: $project-entry-max-height;

        object-fit: cover !important;

        -webkit-background-size:contain;
        -moz-background-size:cover;
        -o-background-size:cover;
        background-size:cover;
      }

      video.chinesedictator {
        background:transparent url(<%= asset_path 'chinesedictator_poster.png' %>) no-repeat 0 0;
      }
      video.mazery {
        background:transparent url(<%= asset_path 'mazery_poster.png' %>) no-repeat 0 0;
      }

      a, a:hover, a:visited {
        text-decoration: none;
        border-bottom: none;
        background-color: initial;
      }
    }

    .left {
      @include media($mobile) {
        @include span-columns(4);
      }
      @include media($mobile-up) {
        @include span-columns(6);
      }

      margin-bottom: 50px;
      text-align: right;
      padding: 0 10px 0 10px;
    }

    .right {
      @include media($mobile) {
        @include span-columns(4);
      }
      @include media($mobile-up) {
        @include span-columns(6);
      }
      margin-bottom: 50px;
      text-align: right;
      padding: 0 10px 0 10px;
    }
  }
}

#outside {
  .wrapper {
    @include outer-container;

    .inside {
      @include span-columns(6);
      @include media($mobile) {
        @include span-columns(12);
      }
    }
  }
}

hr.before_about {
  width: 50%;
  background-color: darken(tan, 1%);
  margin: 0 auto;
  border: 0 none;
  height: 1px;
  margin-bottom: 50px;
}

section#contact {
  @include span-columns(12);
  @include media($mobile) {
    @include span-columns(4);
    padding: 0 10px 0 10px;
  }

  text-align: center;
  padding-bottom: 100px;
}
