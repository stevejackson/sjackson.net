@charset "UTF-8";

@import "bourbon", "neat";

@import "base/base"; // Bitters

body {
  font-family: $base-font-family;
  margin: 0;
}

canvas#effect_canvas {
  background-color: $base-background-color;
  z-index: -1;
  position: fixed;

  width: 100%;
  height: 1000px;

  background: url(<%= asset_path 'seamless_paper_texture.jpg' %>);
  top: 0;
  left: 0;

  padding: 0;
  margin: 0;
}

header {
  @include clearfix;
}

header .uppermost_row {
  @include outer-container;
  @include clearfix;

  .logo {
    @include span-columns(12);
    text-align: center;
    margin-top: 35px;

    a, a:visited {
      color: #5a5a5a;
      color: lighten($color-theme-secondary, 10%);
      font-size: 2em;
      border-bottom: none;
      font-weight: 400;

      &:hover {
        background-color: transparent;
      }
    }
  }

  nav {
    @include span-columns(6);
  }

  .links {
    @include span-columns(3);
    text-align: right;
  }

}

header #centerpiece  {
  @include outer-container;

  padding-top: 190px;

  margin: 0 auto;
  text-align: center;

  min-height: 500px;

  .slogan_header {
    @include span-columns(12);
    margin-bottom: 16px;

    font-size: 2em;
    font-weight: 300;
    color: black;
  }
  .subslogan {
    @include span-columns(12);
    margin-bottom: 24px;
    color: black;
  }
  .buttons {
    @include span-columns(12);
    input {
      font-weight: 400;
    }
  }

}

section#features_row_1 {
  width: 100%;
  background:
    radial-gradient(
      lighten($color-theme-secondary, 10%),
      $color-theme-secondary);

  div#wrapper {
    @include outer-container;
    margin-top: 150px;

    width: 100%;
    min-height: 300px;

    padding: 40px;

    color: white;

    .feature {
      @include span-columns(4);
    }
  }
}

