task :default => :server

task :deploy_staging do
    sh %{rsync -avz --delete --exclude '.git' _site/ magellan:/srv/sjackson.net/staging/public_html/}
end

task :deploy_live do
    sh %{rsync -avz --delete _site/ magellan:/srv/sjackson.net/live/public_html/ --exclude '.git' }
end

task :drafts do
    sh %x{jekyll --auto --server --pygments --drafts}
end

task :server do
    sh %x{jekyll --auto --server --pygments}
end
